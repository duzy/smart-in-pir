## -*- mode: Makefile -*-
## $Id$

CXX = g++
CXXFLAGS =

RM = rm
RM_RF = $(RM) -rf

all: foo

SOURCES = src/main.cpp \
  src/foo.cpp \
  src/bar.cpp \

OBJECTS = src/main.o \
  src/foo.o \
  src/bar.o \

foo: $(OBJECTS)
	$(CXX) $^ -o $@

%.o: %.cpp
	$(CXX) -c $^ -o $@

CLEANUPS = src/main.o \
  src/foo.o \
  src/bar.o \

clean:
	$(RM_RF) $(CLEANUPS)

